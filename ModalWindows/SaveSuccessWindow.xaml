<Window x:Class="SKA_Novel.ModalWindows.SaveSuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SKA_Novel.ModalWindows" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"  ResizeMode="NoResize"
        Title="Сохранение" Height="200" Width="700" MouseDown="Window_MouseDown">
    <Border Background="#FFF" CornerRadius="25" BorderThickness="5" BorderBrush="#090">

        <DockPanel>

            <Image Source="/bin/Debug/Resources/Images/floppy-disk.png" DockPanel.Dock="Left" Width="150"/>
            <TextBlock Text="Сохранение&#x0a;выполненно успешно!" Foreground="#060" FontWeight="Bold"
                       VerticalAlignment="Center"/>

        </DockPanel>
        
    </Border>
</Window>
